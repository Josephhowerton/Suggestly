<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Suggest.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue_lighter</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vibrant_pink_light</item>
        <item name="colorSecondaryVariant">@color/vibrant_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:progressBarStyle">@style/Suggest.ProgressBar</item>
    </style>

    <style name="Theme.Suggest.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue_lighter</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vibrant_pink_light</item>
        <item name="colorSecondaryVariant">@color/vibrant_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:progressBarStyle">@style/Suggest.ProgressBar</item>
        <item name="buttonStyle">@style/Suggest.Button</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.Suggest.AuthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/navy_blue_lighter</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.Suggest.SplashTheme" parent="Theme.Suggest.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Theme.Suggest.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="Suggest.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
    </style>
    <style name="Suggest.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_view_shape</item>
        <item name="android:queryBackground">@drawable/search_view_shape</item>
    </style>
    <style name="Suggest.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_shape</item>
    </style>
    <style name="Suggest.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
        <item name="android:padding">15dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>
    <style name="ButtonShape" parent="Widget.MaterialComponents.Button">
        <item name="cornerSize">50%</item>
    </style>

<!--Card View Styling-->
    <style name="MainImage">
        <item name="android:background">@color/quantum_grey300</item>
    </style>
    <style name="CardViewTextBlue" parent="TextAppearance.AppCompat.Medium">
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/navy_blue</item>
    </style>
    <style name="CardViewTextPink" parent="TextAppearance.AppCompat.Medium">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/vibrant_pink</item>
    </style>
    <style name="CardViewTitleWhite" parent="TextAppearance.AppCompat.Medium">
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/quantum_white_100</item>
        <item name="android:background">@color/vibrant_pink_transparent</item>
    </style>
    <style name="CardViewTextCategory" parent="TextAppearance.AppCompat.Medium">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textColor">@color/quantum_white_100</item>
    </style>
    <style name="Suggest.Explore.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="elevation">4dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Suggest.Explore.CardView.Category" parent="Widget.MaterialComponents.CardView">
        <item name="elevation">4dp</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">11dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardBackgroundColor">@color/navy_blue_lighter</item>
    </style>
<!--         END         -->

<!--Details Fragment Styling-->
    <style name="DetailsTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:singleLine">true</item>
        <item name="textAllCaps">false</item>
