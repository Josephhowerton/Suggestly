<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Suggest.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue_lighter</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vibrant_pink_light</item>
        <item name="colorSecondaryVariant">@color/vibrant_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:progressBarStyle">@style/Suggest.ProgressBar</item>
        <item name="buttonStyle">@style/Suggest.Button</item>
    </style>

    <style name="Theme.Suggest.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue_lighter</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vibrant_pink_light</item>
        <item name="colorSecondaryVariant">@color/vibrant_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:progressBarStyle">@style/Suggest.ProgressBar</item>
        <item name="buttonStyle">@style/Suggest.Button</item>
    </style>

    <style name="Theme.Suggest.SplashTheme" parent="Theme.Suggest.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Suggest.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
    </style>

    <style name="Suggest.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_view_shape</item>
        <item name="android:queryBackground">@drawable/search_view_shape</item>
    </style>

    <style name="Suggest.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_shape</item>
    </style>

    <style name="Suggest.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
        <item name="android:padding">15dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="ButtonShape" parent="Widget.MaterialComponents.Button">
        <item name="cornerSize">50%</item>
    </style>
</resources>