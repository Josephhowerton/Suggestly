<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/suggest_logo"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintEnd_toStartOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/address"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toStartOf="@id/icon_save"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/title_address"
        app:layout_constraintEnd_toStartOf="@id/icon_save"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <ImageView
        android:id="@+id/icon_save"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:src="@drawable/suggest_logo"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintBottom_toTopOf="@+id/icon_favorite"/>

    <ImageView
        android:id="@+id/icon_favorite"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:src="@drawable/suggest_logo"
        app:layout_constraintTop_toBottomOf="@+id/icon_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@+id/address"/>

</androidx.constraintlayout.widget.ConstraintLayout>